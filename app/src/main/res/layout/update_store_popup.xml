<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chỉnh sửa thông tin"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/fa"/>

    <TextView
        android:id="@+id/storeCate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Chọn danh mục cửa hàng"/>

    <Spinner
        android:id="@+id/spinner_store"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:spinnerMode="dropdown"
        android:contentDescription="Chọn danh mục cửa hàng"/>


    <EditText
        android:id="@+id/txtSName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/xamxanh"
        android:textColorHint="@color/xamxanh"
        android:lines="1"
        android:inputType="text"
        android:textColor="#000000"
        android:hint="Tên cửa hàng"/>

    <EditText
        android:id="@+id/txtSAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/xamxanh"
        android:lines="1"
        android:textColor="#000000"
        android:textColorHint="@color/xamxanh"
        android:hint="Địa chỉ cửa hàng"/>

    <EditText
        android:id="@+id/txtSImg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/xamxanh"
        android:lines="1"
        android:textColor="#000000"
        android:textColorHint="@color/xamxanh"
        android:hint="URL hình ảnh"/>

    <Button
        android:id="@+id/btnSaveStoreInfo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/fa"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Lưu"/>

</LinearLayout>