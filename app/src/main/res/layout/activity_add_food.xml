<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/underline"
    tools:context=".admin.AddFoodActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/border_vuong"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm món ăn"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/main"/>

            <EditText
                android:id="@+id/addFName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="start|center_vertical"
                android:background="@drawable/edit_text_border"
                android:padding="16dp"
                android:textColor="@color/main"
                android:hint="Tên món ăn"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/addPrice"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="start|center_vertical"
                android:background="@drawable/edit_text_border"
                android:padding="16dp"
                android:textColor="@color/main"
                android:hint="Giá món"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/addFDes"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="start|center_vertical"
                android:background="@drawable/edit_text_border"
                android:padding="16dp"
                android:textColor="@color/main"
                android:hint="Mô tả món ăn"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/addFImg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="start|center_vertical"
                android:background="@drawable/edit_text_border"
                android:padding="16dp"
                android:textColor="@color/main"
                android:hint="URL hình món ăn"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/btnAddFood"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:text="Thêm"
                android:textSize="18sp"
                app:cornerRadius="18dp"
                android:backgroundTint="@color/main"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>