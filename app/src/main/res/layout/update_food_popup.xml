<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chỉnh sửa thông tin"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/fa"/>

    <EditText
        android:id="@+id/txtFoodName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/xamxanh"
        android:textColorHint="@color/xamxanh"
        android:textColor="#000000"
        android:lines="1"
        android:inputType="text"
        android:hint="Tên món ăn"/>

    <EditText
        android:id="@+id/txtFoodPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/xamxanh"
        android:textColorHint="@color/xamxanh"
        android:lines="1"
        android:inputType="text"
        android:textColor="#000000"
        android:hint="Giá món"/>

    <EditText
        android:id="@+id/txtFoodImg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/xamxanh"
        android:textColorHint="@color/xamxanh"
        android:lines="1"
        android:inputType="text"
        android:textColor="#000000"
        android:hint="Hình URL"/>


    <EditText
        android:id="@+id/txtFoodDes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/xamxanh"
        android:lines="1"
        android:textColor="#000000"
        android:textColorHint="@color/xamxanh"
        android:hint="Mô tả món ăn"/>


    <Button
        android:id="@+id/btnSaveFoodInfo"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/fa"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Lưu"/>



</LinearLayout>