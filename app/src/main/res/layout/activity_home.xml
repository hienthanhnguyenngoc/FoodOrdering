                        android:layout_height="110dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView android:id="@+id/ivAnVat"
                            android:layout_width="60dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/anvat" />

                        <TextView
                            android:id="@+id/titleAnVat"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:text="Ăn Vặt"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:id="@+id/ivThucUong"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/douong" />

                        <TextView
                            android:id="@+id/titleNuoc"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:text="Thức Uống"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:gravity="center">

                        <ImageView android:id="@+id/ivTrangMieng"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginLeft="8dp"
                            app:srcCompat="@drawable/trangmieng"/>

                        <TextView
                            android:id="@+id/titleTrangMieng"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:text="Tráng Miệng"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>


